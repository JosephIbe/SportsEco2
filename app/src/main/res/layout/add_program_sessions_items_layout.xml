<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="155dp"
    android:id="@+id/playerRootLayout"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/players_card_bkg"
        app:cardCornerRadius="13dp">

        <RelativeLayout
            android:id="@+id/programSessionsIconLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/add_program_sessionIV"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="1dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app_logo_resized" />

            <TextView
                android:id="@+id/add_program_sessionNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_program_sessionIV"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="Player Name"
                android:maxLength="9"
                android:ellipsize="end"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>