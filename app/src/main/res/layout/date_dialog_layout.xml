<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/date_dialog_bkg"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tue, 30 oct 2018"
            android:textSize="20sp"
            android:padding="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/sessionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session 1"/>

            <TextView
                android:id="@+id/timeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12pm - 3pm"
                android:layout_below="@id/sessionTV"
                android:layout_marginTop="3dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingLeft="40dp">

                <TextView
                    android:id="@+id/programNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Program Name"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/batchTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batch Name"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_no_players"/>

                <TextView
                    android:id="@+id/sessionCountTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(23)"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentRight="true" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/sessionTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session 1"/>

            <TextView
                android:id="@+id/timeTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12pm - 3pm"
                android:layout_below="@id/sessionTV2"
                android:layout_marginTop="3dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingLeft="40dp">

                <TextView
                    android:id="@+id/programNameTV2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Program Name"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/batchTV2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batch Name"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_no_players"/>

                <TextView
                    android:id="@+id/sessionCountTV2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(23)"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentRight="true" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/sessionTV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session 1"/>

            <TextView
                android:id="@+id/timeTV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12pm - 3pm"
                android:layout_below="@id/sessionTV3"
                android:layout_marginTop="3dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingLeft="40dp">

                <TextView
                    android:id="@+id/programNameTV3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Program Name"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/batchTV3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batch Name"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_no_players"/>

                <TextView
                    android:id="@+id/sessionCountTV3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(23)"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentRight="true" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>