<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:id="@+id/sessCardHolder"
    android:background="@android:color/white"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/sessionIV"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_basket_ball" />

        <TextView
            android:id="@+id/sessionNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sessionIV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:textColor="@color/gray"
            android:textSize="14sp"
            tools:text="Session 1" />

        <LinearLayout
            android:id="@+id/programLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@+id/sessionNameTV">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray"
                android:textSize="9sp"
                android:text="Program: " />

            <TextView
                android:id="@+id/programNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray"
                android:textSize="9sp"
                tools:text="Program 2018" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_gray"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/programLayout"/>

        <LinearLayout
            android:id="@+id/batchLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@+id/divider">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray"
                android:textSize="9sp"
                android:text="Batch: " />

            <TextView
                android:id="@+id/batchNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray"
                android:textSize="9sp"
                tools:text="Evening Batch" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/batchLayout"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:padding="15dp"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/countTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/batchLayout"
                android:textColor="@color/gray"
                android:textSize="8sp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                tools:text="(23)" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>