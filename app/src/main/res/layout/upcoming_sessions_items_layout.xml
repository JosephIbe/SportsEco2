<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rootLayout"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp">

    <ImageView
        android:id="@+id/upcomingIV"
        android:layout_width="65dp"
        android:layout_height="65dp"
        tools:src="@drawable/ic_players"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/metaLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/upcomingIV"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/upcomingNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Session 1"
            android:textSize="18sp"
            android:textColor="@color/text_color"/>

        <TextView
            android:id="@+id/dateTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="23-0ct-18 21:49"/>

    </LinearLayout>

    <TextView
        android:id="@+id/statusTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ongoing"
        android:padding="8dp"
        android:background="@drawable/btn_bkg"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>

</RelativeLayout>