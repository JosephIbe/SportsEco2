<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog"/>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundSheets</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="RoundSheets" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_top_dialog_bkg</item>
    </style>

    <style name="PlayerInfoDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/PlayerInfoDialogSheetStyle</item>
    </style>

    <style name="PlayerInfoDialogSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/bluish</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/nav_icon_color</item>
    </style>

    <style name="CustomHeightRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">37dip</item>
        <item name="android:maxHeight">37dip</item>
    </style>

</resources>
